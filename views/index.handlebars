<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<title>Home Page</title>
	<meta name="description" content="Artists, designers and photographers can sell their pieces.">
	<meta name="viewport" content="width=device-width; initial-scale=1.0;">
	<meta name="author" content="Baran Babur">
	<link href="{{host}}/styles/style.css" type="text/css" rel="stylesheet" />
	<link href="{{host}}/styles/index.css" type="text/css" rel="stylesheet" />
</head>

<body>
	<header id="nav" class="sticky">
		<div class="nav-heading">
			<h1>
				<a href="/">Wingroad</a>
			</h1>
			<div class="nav-buttons">
				<button type="button" id="navBtn">
					<i class="fas fa-bars" id="navBurger"></i>
					<i class="fas fa-times hidden" id="navClose"></i>
				</button>
			</div>
		</div>

		<div class="hidden" id="navLinks">
			{{#if authorised}}
			<a href="/sell">Sell</a>
			<a href="/logout">Log out</a>
			{{else}}
			<a href="/login">Log in</a>
			<a href="/register">Register</a>
			{{/if}}
			<button id="theme">Toggle Theme</button>
		</div>
	</header>
	{{#if msg}}
	<aside>
		<p class="msg">{{msg}}</p>
	</aside>
	{{/if}}
	<main>
		<section class="card-container">
			{{#each items}}
			<article class="card">
				<img src="{{thumbnail}}" alt="">
				<h1 class="card-heading">{{name}}</h1>
				<p>{{price}}</p>
				<p>{{status}}</p>
				<p>{{userID}}</p>
				<p>{{user}}</p>
				<button></button>
			</article>
			{{/each}}
		</section>
	</main>
	<script src="https://kit.fontawesome.com/5fb363ed32.js" crossorigin="anonymous"></script>
	<script type="module" src="main.js"></script>
</body>

</html>
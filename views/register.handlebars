<!doctype html>

<html lang="en">

<head>
	<meta charset="utf-8">
	<title>Create an Account</title>
	<meta name="description" content="form to add new books">
	<meta name="author" content="Mark Tyers">
	<link href="{{host}}/style.css" type="text/css" rel="stylesheet" />
	<script type="module" src="main.js"></script>
</head>

<body>
	<header>
		<h1>Create an Account</h1>
		<a href="/login">Log in</a>
	</header>
	{{#if msg}}
	<aside>
		<p class="msg">{{msg}}</p>
	</aside>
	{{/if}}
	<main>
		<form action="/register" enctype="multipart/form-data" method="post">
			<p>
				<label for="fname">First Name</label><br />
				<input type="text" name="fname" placeholder="your first name (no spaces)" value="{{body.fname}}">
			</p>
			<p>
				<label for="lname">Last Name</label><br />
				<input type="text" name="lname" placeholder="your last name (no spaces)" value="{{body.lname}}">
			</p>
			<p>
				<label for="user">Username</label><br />
				<input type="text" name="user" placeholder="your preferred username (no spaces)" value="{{body.user}}">
			</p>
			<p>
				<label for="pass">Password</label><br />
				<input type="password" name="pass" placeholder="your chosen password" autocomplete="new-password"
					value="{{body.pass}}">
			</p>
			<p>
				<label for="email">Email</label><br />
				<input type="email" name="email" placeholder="a valid email address" value="{{body.email}}">
			</p>
			<p>
				<label for="phone">Phone number</label><br />
				<input type="tel" name="phone" placeholder="your phone number" value="{{body.phone}}">
			</p>
			<p><input type="submit" value="Create"></p>
		</form>
	</main>
</body>

</html>
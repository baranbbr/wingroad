<!doctype html>

<html lang="en">

<head>
	<meta charset="utf-8">
	<title>Home Page</title>
	<meta name="description" content="Secure page for Wingroad.">
	<meta name="viewport" content="width=device-width; initial-scale=1.0;">
	<meta name="author" content="Baran Babur">
	<link href="styles/style.css" type="text/css" rel="stylesheet" />
	<link href="styles/index.css" type="text/css" rel="stylesheet" />

	<script type="module" src="main.js"></script>
</head>

<body>
	<header id="nav">
		<div class="nav-heading">
			<h1>
				<a href="/">Wingroad</a>
			</h1>
			<div class="nav-buttons">
				<button type="button" id="navBtn">
					<i class="fas fa-bars" id="navBurger"></i>
					<i class="fas fa-times hidden" id="navClose"></i>
				</button>
			</div>
		</div>

		<div class="hidden" id="navLinks">
			<a href="/" class="">Home</a>
			{{#if authorised}}
			<a href="/logout">Log out</a>
			{{else}}
			<a href="/login">Log in</a>
			<a href="/register">Register</a>
			{{/if}}
			<button id="theme">Toggle Theme</button>
		</div>
	</header>
	{{#if msg}}
	<aside>
		<p class="msg">{{msg}}</p>
	</aside>
	{{/if}}
	<main>
		<p>These are your items. Here you can update the details as well as delete your items.</p>
		<section class="card-container">
			{{#each userItems}}
			<article class="card">
				<img src="{{thumbnail}}" alt="">
				<h1 class="card-heading">{{name}}</h1>
				<p class="card-field">Â£{{price}}</p>
				<p class="card-field status">{{status}}</p>
				<form action="/sell/update/{{itemID}}" method="post">
					<p>
						<label for="status">Update Status</label>
					</p>
					<div class="select">
						<select name="status" class="select-status">
							<option value="for sale">For Sale</option>
							<option value="under offer">Under Offer</option>
							<option value="sold">Sold</option>
						</select>
					</div>
					<div class="btn-container">
						<button class="update" type="submit">
							Update
						</button>
						<button class="delete" formaction="/sell/del/{{itemID}}">
							Delete
						</button>
					</div>
				</form>
			</article>
			{{/each}}
		</section>
		<a href="/add" class="new-item">Add New Item</a>
	</main>
	<script src="https://kit.fontawesome.com/5fb363ed32.js" crossorigin="anonymous"></script>
	<script type="module" src="main.js"></script>
</body>

</html>